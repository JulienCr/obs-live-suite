{
  "permissions": {
    "allow": [
      "Bash(pnpm add:*)",
      "Bash(pnpm build:*)",
      "Bash(git add:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git commit:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr edit:*)",
      "Bash(pnpm tsc:*)",
      "Bash(git fetch:*)",
      "Bash(git rebase:*)",
      "Bash(git stash push:*)",
      "WebFetch(domain:dockview.dev)"
    ],
    "deny": [],
    "ask": [
      "Bash(pnpm dev:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-tool-call.py"
          }
        ]
      }
    ]
  },
  "outputStyle": "default"
}
