{
    "scripts": {
        "link": "streamdeck link com.julien-cruau.obslive-suite",
        "build": "cross-env USE_HTTPS=true rollup -c",
        "build:http": "rollup -c",
        "watch": "cross-env USE_HTTPS=true rollup -c -w --watch.onEnd=\"streamdeck restart com.julien-cruau.obslive-suite\"",
        "deploy": "cross-env USE_HTTPS=true rollup -c && node scripts/deploy.mjs",
        "deploy:restart": "cross-env USE_HTTPS=true rollup -c && node scripts/deploy.mjs --restart"
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.5.1",
        "@rollup/plugin-alias": "^6.0.0",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "~20.15.0",
        "cross-env": "^10.1.0",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0"
    }
}